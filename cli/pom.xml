<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
	http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>compi-cli</artifactId>
	<packaging>jar</packaging>

	<parent>
		<groupId>org.sing_group</groupId>
		<artifactId>compi</artifactId>
		<version>1.2.0-SNAPSHOT</version>
		<!--
			WARNING: change version using (in the parent project):
			mvn versions:set -DnewVersion=[new_version]
			mvn versions:commit

			This will change the version in all modules at-once
		-->
	</parent>

	<name>Compi CLI</name>

	<properties>
		<distResourcesDirectory>src/main/dist-resources</distResourcesDirectory>
		<installerResourcesDirectory>src/main/installer</installerResourcesDirectory>
		<should.skip.dist>true</should.skip.dist>
		<should.skip.installer>true</should.skip.installer>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.sing_group</groupId>
			<artifactId>compi-core</artifactId>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>es.uvigo.ei.sing</groupId>
			<artifactId>yacli</artifactId>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>createDist</id>
			<properties>
				<should.skip.dist>false</should.skip.dist>
			</properties>
		</profile>
		<profile>
			<id>createInstaller</id>
			<properties>
				<should.skip.dist>false</should.skip.dist>
				<should.skip.installer>false</should.skip.installer>
			</properties>
			<build>
				<plugins>
					<!-- build installer executables -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.6</version>
						<executions>
							<execution>
								<id>fix-permissions</id>
								<phase>package</phase>
								<configuration>
									<target>
										<chmod perm="ugo+x">
											<fileset dir="${basedir}/target/dist">
												<include name="*.sh"/>
												<include name="*.bat"/>
											</fileset>
											<fileset dir="${basedir}/target/installer/payload/compi">
												<include name="compi"/>
											</fileset>
											<fileset dir="${basedir}/target/installer/payload">
												<include name="installer"/>
											</fileset>
											<fileset dir="${basedir}/target/installer">
												<include name="build"/>
											</fileset>
										</chmod>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
							<execution>
								<id>build-installer</id>
								<phase>package</phase>
								<configuration>
									<target>
										<exec executable="${basedir}/target/installer/build" dir="${project.build.directory}/installer"></exec>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
							<execution>
								<id>make-installer-executable</id>
								<phase>package</phase>
								<configuration>
									<target>
										<chmod perm="ugo+x">
											<fileset dir="${basedir}/target/installer">
												<include name="*.bsx"/>
											</fileset>
										</chmod>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<plugins>
			<!-- create executable jar -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${maven.assembly.version}</version>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<archive>
						<manifest>
							<mainClass>org.sing_group.compi.cli.CompiCLI</mainClass>
						</manifest>
					</archive>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<skipAssembly>${should.skip.dist}</skipAssembly>
							<outputDirectory>${project.build.directory}/dist</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>make-assembly-for-installer</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<skipAssembly>${should.skip.installer}</skipAssembly>
							<outputDirectory>${project.build.directory}/installer/payload/compi/compi-files</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- process and copy dist-resources -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>${maven.resources.version}</version>
				<executions>
					<execution>
						<id>copy-dist-resources</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<skip>${should.skip.dist}</skip>
							<outputDirectory>${project.build.directory}/dist</outputDirectory>
							<resources>
								<resource>
									<directory>${distResourcesDirectory}</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-installer-resources</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<skip>${should.skip.installer}</skip>
							<outputDirectory>${project.build.directory}/installer</outputDirectory>
							<resources>
								<resource>
									<directory>${installerResourcesDirectory}</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.0.2</version>
				<executions>
					<execution>
						<id>unpack-jre</id>
						<phase>package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<skip>${should.skip.installer}</skip>
							<artifactItems>
								<artifactItem>
									<groupId>com.oracle.java</groupId>
									<artifactId>jre-mod.java.base-mod.java.logging-mod.java.xml-mod.java.naming</artifactId>
									<version>10.0.1</version>
									<type>tgz</type>
									<overWrite>false</overWrite>
									<!-- <classifier>win64</classifier> -->
									<outputDirectory>${project.build.directory}/installer/payload/compi/compi-files/jre</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
