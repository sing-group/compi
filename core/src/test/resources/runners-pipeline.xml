<?xml version="1.0" encoding="UTF-8"?>
<pipeline xmlns="http://www.esei.uvigo.es/compi-pipeline" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<tasks>
		<task id="t1">
				echo ${my-var} > /tmp/t1-result
		</task>
		<task id="t2" after="t1">
				echo task-2 > /tmp/t2-result
		</task>
		<foreach id="t3" of="list" in="1,2,3" as="i" >
				echo ${i} >> /tmp/t3-result
		</foreach>
	</tasks>
</pipeline>